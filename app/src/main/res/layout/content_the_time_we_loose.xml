<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="12"
    android:rowCount="5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_the_time_we_loose"
    tools:context="forever.software.free.com.wastingtime.TheTimeWeLoose">

        <!-- ROW1 -->

        <TextView
            android:layout_row="0" android:layout_column="4" android:layout_columnSpan="6"
            android:id="@+id/hrs_you_loose"
            android:textSize="96dp"
            android:layout_width="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_columnWeight="10"
            android:layout_gravity="center"/>

        <TextView
            android:layout_row="1" android:layout_column="4" android:layout_columnSpan="6"
            android:id="@+id/min_you_loose"
            android:textSize="92dp"
            android:layout_width="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_columnWeight="10"
            android:layout_gravity="center|top"/>
        <TextView
            android:layout_row="2" android:layout_column="4" android:layout_columnSpan="6"
            android:id="@+id/sec_you_loose"
            android:textSize="86dp"
            android:layout_width="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_columnWeight="10"
            android:layout_gravity="center|top"/>
        <TextView
            android:layout_row="3" android:layout_column="4" android:layout_columnSpan="6"
            android:id="@+id/one_time"
            android:textSize="48dp"
            android:layout_width="wrap_content"
            android:text="00h00m00s"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center|top"/>
        <TextView
            android:layout_row="4" android:layout_column="0" android:layout_columnSpan="10"
            android:text="1"
            android:id="@+id/freeloaders"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="60dp"/>


</GridLayout>
